<%- include ('../../partials/head') %>
    <%- include ('../../partials/navbar') %>

        <div class="container">
            <hr>
            <div class="card">
                <div class="card-header">
                    <h3>Cadastro de artigo</h3>
                </div>
                <div class="card-body">
                    <form method="POST" action="/admin/category/saveCategory">
                        <input class="form-control" type="text" name="title" id=""
                            placeholder="Defina o titulo do artigo!"> <br>
                        <textarea name="body" class="form-control" placeholder="Escreva o artigo aqui!"></textarea> <br>
                        <button class="btn btn-success">Salvar</button>
                        <a class="btn btn-danger" href='/admin/category'>Voltar</a>
                    </form>
                </div>
            </div>
        </div>

        <%- include ('../../partials/footer') %>

            <script src="/tinymce/tinymce.min.js"></script>

            <script>
                tinymce.init({
                    language: 'pt_BR',
                    selector: 'textarea',
                    pluguins: ['advlist',
                        'autolink',
                        'link',
                        'image',
                        'lists',
                        'preview',
                        'searchreplace',
                        'wordcount',
                        'fullscreen',
                        'insertdatetime',
                        'media',
                        'save',
                        'table',
                        'emoticons',]
                });
            </script>